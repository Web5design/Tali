

.page-header
  h1 Details of user

table.table.table-bordered
  tbody
    mixin property(name)
      tr
        th #{name}
        td= user[name]
    each prop, key in user
      if typeof prop != 'function'
        mixin property(key)

.well
  != link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_user(user), {class: 'btn btn-primary'})
  != ' '+link_to('<i class="icon-remove icon-white"></i> Delete', path_to.user(user), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'})
  |  or
  != link_to('Back to index', path_to.users())
